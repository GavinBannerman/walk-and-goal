<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/home_cardview"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp" >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_home"
        android:padding="10dp">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_goal_name"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:textColor="@color/colorTextPrimary"
            android:text="Walk The Dog" />

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_goal_distance"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:layout_below="@+id/item_goal_name"
            android:textColor="@color/colorTextSecondary"
            android:text="800 Metres" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_goal_options"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu_overflow"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>